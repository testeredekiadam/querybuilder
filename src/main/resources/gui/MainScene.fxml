<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Box?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController"
            stylesheets="@../styles/styles.css">




    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Search Query" onAction="#onAddNewTab"/>
                <SeparatorMenuItem/>
            </Menu>
        </MenuBar>



    </top>

    <center>
        <VBox spacing="20">
                <TabPane fx:id="tabPane" minHeight="200">

                    <Tab closable="false" styleClass="transparent-tab">
                        <graphic>
                            <Button text="New Tab" onAction="#onAddNewTab" styleClass="borderless-button"/>
                        </graphic>
                    </Tab>

                </TabPane>

            <TextArea fx:id="query" editable="false">

            </TextArea>

        </VBox>

    </center>

    <bottom>
        <Button fx:id="copyButton" text="Copy" onAction="#onCopy" />

    </bottom>
</BorderPane>
