<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.MainController">



    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Add New Query" onAction="#onAddNewTab"/>
                <SeparatorMenuItem/>
            </Menu>
        </MenuBar>



    </top>

    <center>
        <VBox spacing="20">
            <TabPane fx:id="tabPane">
<!--                <Tab text="Query Tab" closable="false" id="0">
                    <content>
                        <fx:include source="Editor.fxml"/>
                    </content>
                </Tab>-->
            </TabPane>

            <HBox spacing="20"  style="-fx-padding: 0 0 10 20">
                <Button fx:id="displayQueryButton" text="Display Query" onAction="#display"/>

            </HBox>

            <TextArea fx:id="query" editable="false">

            </TextArea>

        </VBox>

    </center>

    <bottom>
        <Button fx:id="copyButton" text="Copy" onAction="#onCopy" />

    </bottom>
</BorderPane>
