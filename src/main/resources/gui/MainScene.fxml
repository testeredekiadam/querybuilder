<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Box?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController"
            stylesheets="@../styles/styles.css">




    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem fx:id="searchQuery" text="Search Query" onAction="#onChooseEditor"/>
                <MenuItem fx:id="updateCompanyUser" text="Update Company/User" onAction="#onChooseEditor"/>
                <MenuItem fx:id="deleteCompanyUser" text="Delete Company/User" onAction="#onChooseEditor"/>
                <MenuItem fx:id="insertDomain" text="Insert Domain" onAction="#onChooseEditor"/>
                <MenuItem fx:id="deleteDomain" text="Delete Domain" onAction="#onChooseEditor"/>
                <MenuItem fx:id="updateMailDomains" text="Update Mail Domains" onAction="#onChooseEditor"/>
                <MenuItem fx:id="importUserFromCSV" text="Import User From CSV" onAction="#onChooseEditor"/>
            </Menu>
        </MenuBar>



    </top>

    <center>
        <VBox spacing="20">

            <fx:include source="SearchQuery.fxml" />


            <HBox spacing="20"  style="-fx-padding: 0 0 10 20">
                <Button fx:id="displayQueryButton" text="Display Query" onAction="#display"/>

            </HBox>

            <TextArea fx:id="query" editable="false">

            </TextArea>

        </VBox>

    </center>

    <bottom>
        <Button fx:id="copyButton" text="Copy" onAction="#onCopy" />

    </bottom>
</BorderPane>
