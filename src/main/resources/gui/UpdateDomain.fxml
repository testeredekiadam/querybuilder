<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <GridPane style="-fx-padding: 10 0 10 20">
        <VBox spacing="20">
            <TextField fx:id="replace" promptText="Replace text"/>
            <TextField fx:id="replaceFilter" promptText="Replace filter"/>
        </VBox>

        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-padding: 0 0 10 20">
            <Button fx:id="updateButton" text="Update Filters" onAction="#update"/>
        </HBox>

    </GridPane>

</AnchorPane>
